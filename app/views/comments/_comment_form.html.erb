<% unless current_user.is_a? GuestUser %>
   <%= form_for @comment, url: '#' do |f| %>
      <div class="form-group">
         <%= f.label :content %>
         <%= f.text_area :content, class: "form-control" %>
      </div>
      
      <div class="row mx-0 form-group">
         <%= f.submit 'Post comment', class: 'btn btn-primary ml-auto' %>
      </div>
   <% end %>
<% end %>